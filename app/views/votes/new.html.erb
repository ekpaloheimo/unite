<%= form_for @vote, url: {action: "create"}, html: {class: "nifty_form"} do |f| %>
<table>
  <tr><td>Name</td><td><%= f.text_field :name %></td></tr>
  <tr><td>Email</td><td><%= f.text_field :email %></td></tr>
  <tr><td>Country</td><td><%= f.select(:country, {name: :country}) %></td></tr>
  <tr><td colspan="2"><%= f.submit "Create" %></td></tr>
</table>
<% end %>


<script language="javascript">
  $(document).ready(function() {
    populateCountries("vote_country");
  });
</script>
