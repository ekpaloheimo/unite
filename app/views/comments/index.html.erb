<p id="notice"><%= notice %></p>

<h1>Listing Comments</h1>

<table>
  <thead>
    <tr>
      <th>Topic</th>
      <th>Body</th>
      <th>Email</th>
      <th>Language</th>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @comments.each do |comment| %>
      <tr>
        <td><%= comment.topic %></td>
        <td><%= comment.body %></td>
        <td><%= comment.email %></td>
        <td><%= comment.language %></td>
        <td><%= comment.name %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Comment', new_comment_path %>
