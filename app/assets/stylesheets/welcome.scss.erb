.carousel-inner > .item > img {
  margin: 0 auto;
}
.carousel-control { 
  width: 4% !important;
}
.carousel {
  margin-bottom: 20px;
}
//======================================================================

.sd-main {
  margin-top: 20px;
  hr { margin-top: 150px; }
}

.modal-dialog { 
  background: white;
  border: 2px solid #333;
  border-radius: 10px;
}

footer {  
  font-size: small;
  h6 {
    font-weight: 800;
  }
}

.navbar {
  margin-bottom: 3px !important;
}

.navbar a {
  color: #999;
}

.nav > li > a:hover {
  background-color: #333 !important;
  color: white;
}

.sd-banner {
  background-image: url(<%= asset_path 'main-banner.jpg' %>);
  background-size: cover;
  height: 440px;
}

.alert { 
  text-align: center;
}

.sd-navbar-flags {
  li a { 
    padding-right: 2px !important; 
    padding-left: 2px !important; 
  }
}      

