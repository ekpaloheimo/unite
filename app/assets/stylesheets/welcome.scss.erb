.carousel-inner > .item > img {
  margin: 0 auto;
}
.carousel-control { 
  width: 4% !important;
}
.carousel {
  margin-bottom: 20px;
}
//======================================================================

.ua-main-screen {
  margin: 0 auto;
  padding: 0;   
  text-align: center;             
  position: absolute;
  left:0; right:0; top:0; bottom:0;                
  border: 1px solid;
  text-transform: uppercase;
  background: cornflowerblue;
  color: white;
  font-weight: bold;
  h1 { 
    font-size: 12.0vw; 
    text-shadow: 4px 4px #333;
  }
  h2 { 
    font-size: 8.0vw; 
    text-shadow: 4px 4px #333;
  }
  a { color: #ddd; }
}

.ua-main {
  margin-top: 20px;
  hr { margin-top: 150px; }
}

.ua-video-top { 
  text-align: center;              
  margin: 0 auto;
}

.sd-table-appeal {
  td { padding-right: 22px; }
}                 

.modal-dialog { 
  background: white;
  border: 2px solid #333;
  border-radius: 10px;
}

footer {
  margin-top: 60px;
  font-size: small;
  h6 {
    font-weight: 800;
  }
}

.navbar {
  margin-bottom: 3px !important;
}

.navbar a {
  color: #999;
}


.sd-banner {
  background-image: url(<%= asset_path 'main-banner.jpg' %>);
  background-size: cover;
  height: 440px;
}

.alert { 
  text-align: center;
}

.sd-navbar-flags {
  li a { 
    padding-right: 2px !important; 
    padding-left: 2px !important; 
  }
}      

